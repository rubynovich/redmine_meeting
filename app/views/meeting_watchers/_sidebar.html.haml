:css
  #meeting_watchers ul {margin: 0;  padding: 0;}
  #meeting_watchers li {list-style-type:none;margin: 0px 2px 0px 0px; padding: 0px 0px 0px 0px;}
  #meeting_watchers select {width: 95%; display: block;}
  #meeting_watchers a.delete {opacity: 0.4; vertical-align: middle;}
  #meeting_watchers a.delete:hover {opacity: 1;}
  #meeting_watchers img.gravatar {margin: 0 4px 2px 0;}

- if can_create_watcher?(@object)
  %p

  .contextual
    = link_to l(:button_add), {controller: 'meeting_watchers', action: 'new', meeting_container_id: @object.id, meeting_container_type: @object.class}, remote: true, method: 'get'

%h3= l(:field_meeting_watchers)

#meeting_watchers
  = render partial: 'meeting_watchers/index'
