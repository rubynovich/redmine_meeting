%p.meeting_approver{id: "meeting_approver_#{meeting_approver.id}", class: (meeting_approver.deleted? ? "is-deleted" : "")}
  = check_box_tag :meeting_approver, "1", meeting_approver.approved? , disabled: ((User.current != meeting_approver.user) || meeting_approver.deleted? || meeting_approver.approved?), onclick: "approve_item(this,'#{url_for({controller: 'meeting_approvers', action: 'update', id: meeting_approver.id, meeting_container_id: @object.id, meeting_container_type: @object.class.to_s, meeting_approver: {approved: !meeting_approver.approved?}})}','#{meeting_approver.id}')"
  = label_tag :meeting_approver, h(meeting_approver.user)
  - if can_destroy_approver?(meeting_approver)
    = link_to(image_tag('delete.png'), {controller: 'meeting_approvers', action: 'destroy', id: meeting_approver.id, meeting_container_id: @object.id, meeting_container_type: @object.class.to_s}, remote: true, method: 'delete', confirm: l(:text_are_you_sure), html: {class: "delete", title: l(:button_delete) })
