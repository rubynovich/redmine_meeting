%p
  = l(:field_subject) + ':'
  = @container
%p
  = format_date(@container.meet_on)
  = "(#{format_time(@container.start_time, false)}-#{format_time(@container.end_time, false)})"
%p
%p
  = l(:mail_body_greeting, lastname: @user.lastname, firstname: @user.firstname)

  - if @container.is_a? MeetingAgenda
    = t(:mail_body_meeting_asserter_create_agenda)
    = link_to(@container, controller: 'meeting_agendas', action: 'show', id: @container.id, only_path: false)
  - elsif @container.is_a? MeetingProtocol
    = t(:mail_body_meeting_asserter_create_protocol)
    = link_to(@container, controller: 'meeting_protocols', action: 'show', id: @container.id, only_path: false)
