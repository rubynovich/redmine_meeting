= "#{l(:field_subject)}: #{@container}"
= "#{l(:field_meet_on)}: #{format_date(@container.meet_on)}"
= "#{l(:label_meeting_agenda_start_time)}: #{format_time(@container.start_time, false)}"
= "#{l(:label_meeting_agenda_end_time)}: #{format_time(@container.end_time, false)}"


= l(:mail_body_greeting, lastname: @author.lastname, firstname: @author.firstname)
- if @container.is_a? MeetingAgenda
  = @user.name + " " + t(:mail_body_meeting_comment_agenda) + " " + @container.subject + ": " + url_for(controller: 'meeting_agendas', action: 'show', id: @container.id, only_path: false)
- elsif @container.is_a? MeetingProtocol
  = @user.name + " " + t(:mail_body_meeting_comment_protocol) + " " + @container.subject + ": " + url_for(controller: 'meeting_protocols', action: 'show', id: @container.id, only_path: false)

- if @comment_for.present?
  = @comment_for.to_s.split("\n").map{|s| "> #{s}\n"}

  = "---"

= @comment
