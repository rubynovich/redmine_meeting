= "#{l(:field_subject)}: #{@container}"
= "#{l(:field_meet_on)}: #{format_date(@container.meet_on)} (#{format_time(@container.start_time, false)}-#{format_time(@container.end_time, false)})"

= l(:mail_body_greeting, lastname: @user.lastname, firstname: @user.firstname) + t(:mail_body_meeting_asserter_create_greating, author: @author.name)
- if @container.is_a? MeetingAgenda
  = t(:mail_body_meeting_asserter_create_agenda) + " #{@container}: " + url_for(controller: 'meeting_agendas', action: 'show', id: @container.id, only_path: false)
- elsif @container.is_a? MeetingProtocol
  = t(:mail_body_meeting_asserter_create_protocol) + " #{@container}: " + url_for(controller: 'meeting_protocols', action: 'show', id: @container.id, only_path: false)
