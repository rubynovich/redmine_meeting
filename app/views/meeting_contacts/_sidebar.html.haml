:css
  #meeting_contacts ul {margin: 0;  padding: 0;}
  #meeting_contacts li {list-style-type:none;margin: 0px 2px 0px 0px; padding: 0px 0px 0px 0px;}
  #meeting_contacts select {width: 95%; display: block;}
  #meeting_contacts a.delete {opacity: 0.4; vertical-align: middle;}
  #meeting_contacts a.delete:hover {opacity: 1;}
  #meeting_contacts img.gravatar {margin: 0 4px 2px 0;}

%p

.contextual
  = link_to l(:button_add), {controller: 'meeting_contacts', action: 'new', meeting_container_id: @object.id, meeting_container_type: @object.class}, remote: true, method: 'get'

%h3= l(:field_meeting_contacts)

#meeting_contacts
  = render partial: 'meeting_contacts/index'
